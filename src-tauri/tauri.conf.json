{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clarity",
  "version": "0.1.0",
  "identifier": "com.monsterstep.clarity",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "width": 1280,
        "height": 720,
        "minWidth": 1024,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data: blob:",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**",
          "$HOME/**",
          "$APPDATA/**",
          "$APPLOCALDATA/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
