{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:scope-appdata",
    "fs:scope-home",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "core:window:allow-close"
  ]
}
